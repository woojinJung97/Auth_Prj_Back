<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kr.travel.springbootprj.home.mapper.UserManagementMapper">
    <select id="userManagementList" parameterType="com.kr.travel.springbootprj.home.dvo.UserManagementDvo" resultType="com.kr.travel.springbootprj.home.dvo.UserManagementDvo">
        SELECT u.id
             , u.username
             , u.password
             , u.email
             , u.created_at
             , u.username
             , u.role
             , u.created_at
             , u.address
          FROM users u
         WHERE 1=1
          <if test='id != null and id != "" '>
           AND u.id = #{id}
          </if>
          <if test='password != null and password != "" '>
           AND u.password = #{password} || '%'
          </if>
    </select>
</mapper>
